<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#E3F2FD"> <TextView
        android:id="@+id/txtNombreUsu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Juan Perez"
        android:textStyle="bold"
        android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtRutUsu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RUT: 12345678-9"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtRolUsu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rol: OPERADOR"
            android:textColor="#3F51B5"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditarUsu"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="#001AFF"
                android:text="Editar"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnEliminarUsu"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Eliminar"
                android:textSize="12sp"
                android:backgroundTint="#F44336"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>